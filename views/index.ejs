
<%- include("header"); -%>

  <div class="box" id="heading">
    <h1><%= listTitle %></h1>
  </div>

  <div class="box">
    <%   for(var j=0;j<item.length;j++){   %>

   <form  action="/delete" method="post">
     <div class="item">
       <input type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%= item[j]._id %>">
     <p><%= item[j].name %></p>
     </div>
     <input type="hidden" name="listName" value="<%= listTitle %>">
   </form>

    <% } %>


    <form class="item" action="/" method="post">
      <input type="text" name="list_item" value="" placeholder="New Item" autocomplete="off">
      <button type="submit" name="button" value="<%= listTitle %>">+</button>
    </form>
  </div>

  <%- include("footer"); -%>
